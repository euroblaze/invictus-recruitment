                                        <button id="new_languages_id" class="btn btn-info" style="border-radius:20px; padding-bottom: 0px;padding-top: 0px;"><b>+</b></button>



                                        <t t-foreach="language" t-as="lan">

                                            <div>
                                                <h4><b><t t-esc="lan['language']"/></b> <div style="font-size: 14px;"><t t-esc="lan['proficiency']"/></div> </h4>
