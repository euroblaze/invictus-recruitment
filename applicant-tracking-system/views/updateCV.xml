                                                    <input type="hidden" name="action" value="update_languages"/>


                                                    <t t-foreach="language" t-as="lan">

                                                        <t t-set= "id" t-value="lan['id']"/>


                                                        <center>
                                                            <select t-att-name="'language'+'-'+id" style="width: 90%;">
                                                                <option selected="selected"><t t-esc="lan['language']"/></option>
                                                                <t t-foreach="all_languages" t-as="all_lang">
                                                                    <option><t t-esc="all_lang['longName']"/></option>
                                                                </t>
                                                            </select>
                                                        </center>


                                                        <center>
                                                            <select t-att-name="'proficiency'+'-'+id" style="width: 90%; margin-bottom:15px;">
                                                                <option selected="selected"><t t-esc="lan['proficiency']"/></option>
                                                                <option>Elementary proficiency</option>
                                                                <option>Limited working proficiency</option>
                                                                <option>Professional working proficiency</option>
                                                                <option>Full professional proficiency</option>
                                                                <option>Native or bilingual proficiency</option>
                                                            </select>
                                                        </center>

                                                    </t>

                                                    <center><button  type="submit" class="btn btn-info"  onclick="languages_updated_msg()">Update</button></center>

                                                    <script>
                                                        function languages_updated_msg() {
                                                        alert("Thank you , your languages are now updated");
                                                        }
                                                    </script>

                                                    <hr style="border-top: 1px solid #000000; margin-bottom:5px; margin-top:5px;" />


                                                    <center><h3>Add new language:</h3></center>

                                                    <center>
                                                        <select form="new_language" name="language" style="width: 90%;">
                                                            <option selected="selected">English</option>
                                                            <t t-foreach="all_languages" t-as="all_lang">
                                                                <option><t t-esc="all_lang['longName']"/></option>
                                                            </t>
                                                        </select>
                                                    </center>

                                                    <center>
                                                        <select form="new_language" name="proficiency" style="width: 90%;">
                                                            <option>Elementary proficiency</option>
                                                            <option>Limited working proficiency</option>
                                                            <option>Professional working proficiency</option>
                                                            <option>Full professional proficiency</option>
                                                            <option>Native or bilingual proficiency</option>
                                                        </select>
                                                    </center>

                                                    <center><button form="new_language" type="submit" class="btn btn-info" style="margin: 10px;">Add</button></center>


                                                </form>


                                                <datalist id="languages_list">
                                                    <t t-foreach="all_languages" t-as="all_lang">
                                                        <option t-att-value="all_lang['longName']"/>
                                                    </t>
                                                </datalist>

                                            </div>
                                        </div>


                                        <script>

                                            var modal_lang = document.getElementById('myModal2');

                                            var btn_lang = document.getElementById("new_languages_id");

                                            var span_lang = document.getElementsByClassName("close_lang")[0];

                                            btn_lang.onclick = function() {
                                            modal_lang.style.display = "block";
                                            }

                                            span_lang.onclick = function() {
                                            modal_lang.style.display = "none";
                                            }

                                            window.onclick = function(event) {
                                            if (event.target == modal_lang) {
                                            modal_lang.style.display = "none";
                                            }
                                            }
                                        </script>


                                    </div>
                                </div>

                                <div class="col-lg-5" >
                                    <h4>Professional Profile</h4>
                                    <div class="form-group">
                                        <textarea form="update_accomplishments" class="form-control" name="description" rows="14"><t t-esc="description"/></textarea>
                                    </div>
                                </div>
                            </div>


                            <button form="update_accomplishments" type="submit" class="btn btn-info" onclick="accomplishments_updated_msg()">Update</button>
                            <script>
                                function accomplishments_updated_msg() {
                                alert("Thank you , your accomplishments are now updated");
                                }
                            </script>

                        </div>
                    </div>







